#!/bin/bash
PATH=/usr/sbin:/usr/bin:/sbin:/bin
# TODO:
# - following the example in https://github.com/MediaBrowser/Emby.Build/blob/master/docker-containers/stable/root/var/cache/scripts/emby-server
# - have (external) config file to choose between --net=host and port forwarding
