$SUDO docker rm zarafa-webmeetings
$SUDO docker pull fbartels/zarafa-webmeetings-docker
$SUDO docker run --name=zarafa-webmeetings -it --env-file=/etc/z-container/webmeetings/env.conf --net=host fbartels/zarafa-webmeetings-docker
